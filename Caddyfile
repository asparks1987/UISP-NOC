{
    # Optional: send an email to ACME CA for cert events
    email {env.ACME_EMAIL}
}

# Main site with automatic HTTPS. Default to localhost if NOC_DOMAIN not set.
{$NOC_DOMAIN:localhost} {
    # Reverse proxy to the PHP app running in the uisp-noc container
    reverse_proxy uisp-noc:80 {
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Forwarded-For {remote}
    }
}

# Optional: serve the embedded Gotify on a separate hostname.
# Set GOTIFY_DOMAIN to e.g. gotify.example.com to enable.
{$GOTIFY_DOMAIN} {
    reverse_proxy uisp-noc:18080 {
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Forwarded-For {remote}
    }
}
